---
import { images } from './data.js'
import '@styles/global.scss';
---


<ul class="image-list">
  {#each images as image}
    <li>
      <img
        src={image.src}
        alt={image.alt}
        id={image.id}
        class="modal-trigger"
      />
    </li>
  {/each}
</ul>

<div class="modal" id="imageModal">
  <div class="modal-content">
    <span class="close" id="closeModal">&times;</span>
    <img src="" alt="" id="modalImage" />
  </div>
</div>
