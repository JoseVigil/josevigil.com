---
import { getCollection } from 'astro:content';
import MainLayout from '@layouts/MainLayout.astro';

let dates = await getCollection('dates');
dates = dates.sort((a, b) => {
  if (new Date(a.data.pubDate) < new Date(b.data.pubDate))
    return 1;
  if (new Date(a.data.pubDate) > new Date(b.data.pubDate))
    return -1;
  return 0;
});
---

<MainLayout
  title="dates | Jose Vigil"
  description="Jose Vigil's dates"
  image=""
>
  <h2 class="dark:text-white">
    dates
  </h3>
  <section>
    <div class="dates">
      <ul>
        <section>
          <div class="dates">
              <ul><p class="mb-3">
                <p style="font-weight:400; font-style:italic; padding-top:10px;">Experience and Vision</p>
              </p>
            </ul>
            <ul>
              {
                dates.map(e => (
                  <li>
                    <a href={`/dates/${e.slug}`} title="">{ e.data.title }</a>
                  </li>
                ))
              }
            </ul>
          </div>
        </section>
      </ul>
    </div>
  </section>
</MainLayout>
